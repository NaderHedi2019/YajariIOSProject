    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="cardStyle" parent="Platform.MaterialComponents">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">5dp</item>
        <item name="cardMaxElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>


    <style name="btnStyle" parent="Platform.MaterialComponents">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">22dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/rale_way_bold</item>
        <item name="android:padding" tools:ignore="NewApi">18dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Root Layout -->
    <style name="rootStyle" parent="@style/Platform.MaterialComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:animationCache">true</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/colorPrimaryRipple</item>
        <item name="tabRippleColor">@color/white</item>
        <item name="background">@color/white</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

