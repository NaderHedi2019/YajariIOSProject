<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbarCL"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backIV"
            android:src="@drawable/ic_back_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_20"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/searchEDT"
                style="@style/edtStyle"
                android:drawablePadding="@dimen/padding_10"
                android:hint="@string/search_hint"
                android:background="@null"
                android:visibility="gone"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:drawableStart="@drawable/ic_search_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/searchIV"
                app:layout_constraintStart_toEndOf="@id/backIV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/searchIV"
                android:src="@drawable/ic_search_dark"
                android:layout_marginEnd="@dimen/margin_20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/clearIV"
            android:visibility="gone"
            android:src="@drawable/ic_search_clear"
            android:layout_marginEnd="@dimen/margin_20"
            app:layout_constraintEnd_toEndOf="@id/searchEDT"
            app:layout_constraintBottom_toBottomOf="@id/searchEDT"
            app:layout_constraintTop_toTopOf="@id/searchEDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tabCV"
        style="@style/cardStyle"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="@dimen/margin_10"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/margin_15"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarCL"
        >
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/searchTL"
            app:tabRippleColor="@null"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/tab_unselected_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed"
            app:tabTextAppearance="@style/Text_Semi_Bold_16"
            app:tabTextColor="@color/tab_color_selector" />


    </com.google.android.material.card.MaterialCardView>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/searchVP"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabCV" />

</androidx.constraintlayout.widget.ConstraintLayout>