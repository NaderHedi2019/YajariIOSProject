<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/notInternetIV"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/opsTV"
        android:src="@drawable/ic_no_internet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/opsTV"
        style="@style/tvStyle700"
        android:layout_marginTop="@dimen/margin_30"
        android:textSize="@dimen/text_39"
        app:layout_constraintBottom_toTopOf="@+id/msgTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/ops"
        app:layout_constraintTop_toBottomOf="@id/notInternetIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/msgTV"
        style="@style/tvStyle400"
        android:lineSpacingExtra="3dp"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tryAgainBTN"
        android:textColor="@color/color_414141"
        android:textSize="@dimen/text_16"
        android:text="@string/no_internet_msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/opsTV"
       />
    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        style="@style/btnStyle"
        android:id="@+id/tryAgainBTN"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:text="@string/try_again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/msgTV"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>