<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_25"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sendMsgTV"
        style="@style/tvStyle600"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintWidth_default="wrap"
        android:textColor="@color/white"
        android:text="Hello julia i am interested to take this t shirt"
        android:background="@drawable/shape_send_msg"
        android:textSize="@dimen/text_14"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/margin_25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/padding_22"
     />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sendTimeTV"
        android:text="10:20 PM"
        style="@style/tvStyle500"
        android:textColor="@color/color_828282"
        android:textSize="@dimen/text_10"
        android:layout_marginTop="@dimen/margin_8"
        app:layout_constraintEnd_toEndOf="@id/sendMsgTV"
        app:layout_constraintTop_toBottomOf="@id/sendMsgTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>