<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/otpCL"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="match_parent"
    tools:context=".ui.otp.OtpVerificationActivity">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backIV"
        android:src="@drawable/ic_back_black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/otpLogoIV"
        android:src="@drawable/ic_otp_verification"
        android:layout_marginTop="@dimen/margin_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/otpVerificationTV"
        android:layout_marginTop="@dimen/margin_25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otpLogoIV"
        style="@style/tvStyle700"
        android:text="@string/otp_verification"
       />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/codeDescTV"
        style="@style/tvStyle400"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/we_sent_you_6_digit_code"
        app:layout_constraintTop_toBottomOf="@id/otpVerificationTV"
      />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atTV"
        style="@style/tvStyle400"
        android:gravity="center"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/emailTV"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/at"
        app:layout_constraintTop_toBottomOf="@id/codeDescTV"
        />
    <androidx.appcompat.widget.AppCompatTextView
        style="@style/tvStyle600"
        android:id="@+id/emailTV"
        android:textSize="@dimen/text_16"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Jacob@gmail.com"
        android:layout_marginStart="@dimen/margin_5"
        app:layout_constraintBottom_toBottomOf="@id/atTV"
        app:layout_constraintTop_toTopOf="@id/atTV"
        app:layout_constraintStart_toEndOf="@id/atTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40"
        android:textColor="@color/black"
        app:height="55dp"
        app:box_margin="3.5dp"
        app:otp_box_background_active="@drawable/shape_otp_selected"
        app:otp_box_background="@drawable/shape_otp_unselected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailTV"
        app:layout_constraintVertical_chainStyle="packed"
        app:length="6"
        app:bar_enabled="false"
        app:otp_text_size="26dp"
        app:bar_active_color="@color/colorPrimary"
        app:text_typeface="@font/rale_way_semi_bold"
        app:width="50dp" />

    <com.google.android.material.button.MaterialButton
        style="@style/btnStyle"
        android:id="@+id/verifyBTN"
        android:text="@string/verify"
        android:backgroundTint="@color/filter_text_selector"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_40"
        app:layout_constraintTop_toBottomOf="@id/otp_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/resendTV"
        style="@style/tvStyle500"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/margin_50"
        android:paddingVertical="@dimen/padding_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/resend_code"
        app:layout_constraintTop_toBottomOf="@id/verifyBTN"
        />
    <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
        android:id="@+id/circularProgress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_30"
        android:visibility="invisible"
        app:direction="counterclockwise"
        app:drawDot="false"
        app:enableProgressAnimation="true"
        app:fillBackground="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resendTV"
        app:progressBackgroundColor="@color/color_DCDCDC"
        app:progressCap="round"
        app:progressColor="@color/colorPrimary"
        app:progressStrokeWidth="6dp"
        app:startAngle="270"
        app:textColor="@color/colorPrimary"
        app:textSize="@dimen/text_18" />
</androidx.constraintlayout.widget.ConstraintLayout>