<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/categoryCL"
    android:layout_width="wrap_content"
    app:layout_constraintWidth_default="wrap"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_6"
    android:layout_marginBottom="@dimen/margin_10"
    android:background="@drawable/bg_category_radius_40"
    android:paddingHorizontal="@dimen/padding_20"
    android:paddingVertical="@dimen/padding_12">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemName"
        style="@style/tvStyle600"
        android:text="Appliances"
        android:textSize="@dimen/text_16"
        android:layout_width="0dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintEnd_toStartOf="@+id/removeItemIV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/removeItemIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_remove_category_alert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>