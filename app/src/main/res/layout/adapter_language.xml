<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    app:cardElevation="3dp"
    android:id="@+id/languageCV"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp"
    android:elevation="2dp"
    android:layout_marginBottom="@dimen/margin_5"
    app:strokeColor="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/padding_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:scaleType="centerCrop"
            android:id="@+id/flagIV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/united_arab_emirates"
            app:shapeAppearanceOverlay="@style/ImageView.Round50"
            android:layout_width="54dp"
            android:layout_height="54dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/languageNameTV"
            android:text="Arabic"
            style="@style/tvStyle600"
            android:textSize="@dimen/text_16"
            app:layout_constraintEnd_toStartOf="@+id/selectedIV"
            android:layout_marginStart="@dimen/padding_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/flagIV"
          />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/selectedIV"
            android:visibility="gone"
            android:src="@drawable/ic_select_language"
            android:layout_marginEnd="@dimen/margin_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>