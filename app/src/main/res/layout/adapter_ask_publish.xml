<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/askTitleTV"
        style="@style/tvStyle700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/text_18"
        tools:text="What type of announcement?"
       />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/optionCL1"
        android:padding="@dimen/padding_12"
        android:layout_marginTop="@dimen/margin_30"
        app:layout_constraintTop_toBottomOf="@id/askTitleTV"
        android:background="@drawable/option_ask_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/option1IV"
            android:src="@drawable/i_give_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/optionName1TV"
            style="@style/tvStyle700"
            android:text="I give"
            android:gravity="start"
            android:textSize="@dimen/text_16"
            app:layout_constraintEnd_toStartOf="@+id/arrow1IV"
            android:textColor="@color/option_text_selector"
            android:layout_marginStart="@dimen/margin_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/option1IV"
         />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginEnd="6dp"
            android:id="@+id/arrow1IV"
            android:src="@drawable/right_arrow_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/optionCL2"
        android:padding="@dimen/padding_12"
        android:layout_marginTop="@dimen/padding_16"
        app:layout_constraintTop_toBottomOf="@id/optionCL1"
        android:background="@drawable/option_ask_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/option2IV"
            android:src="@drawable/i_give_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/optionName2TV"
            style="@style/tvStyle700"
            android:text="I give"
            android:gravity="start"
            android:textSize="@dimen/text_16"
            app:layout_constraintEnd_toStartOf="@+id/arrow2IV"
            android:textColor="@color/option_text_selector"
            android:layout_marginStart="@dimen/margin_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/option2IV"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginEnd="6dp"
            android:id="@+id/arrow2IV"
            android:src="@drawable/right_arrow_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>