<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.help_support.HelpSupportActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"/>
    <ScrollView
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginHorizontal="@dimen/margin_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nameTV"
                style="@style/tvStyle500"
                android:layout_marginTop="@dimen/margin_35"
                android:text="@string/name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/edtStyle"
                android:id="@+id/nameEDT"
                android:drawablePadding="@dimen/padding_12"
                android:drawableStart="@drawable/name_selector"
                android:hint="@string/name"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:layout_marginTop="@dimen/margin_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nameTV"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/emailTV"
                android:layout_width="wrap_content"
                style="@style/tvStyle500"
                android:layout_marginTop="@dimen/margin_20"
                android:text="@string/email_address"
                app:layout_constraintTop_toBottomOf="@id/nameEDT"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatEditText
                style="@style/edtStyle"
                android:id="@+id/emailEDT"
                android:drawablePadding="@dimen/padding_12"
                android:imeOptions="actionNext"
                android:drawableStart="@drawable/email_selector"
                android:hint="@string/enter_email_address"
                android:inputType="textEmailAddress"
                android:layout_marginTop="@dimen/margin_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emailTV"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/msgTV"
                style="@style/tvStyle500"
                android:layout_marginTop="@dimen/margin_20"
                app:layout_constraintTop_toBottomOf="@id/emailEDT"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/write_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/msgCL"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="@dimen/padding_12"
                android:layout_marginTop="@dimen/padding_14"
                android:background="@drawable/shape_edt_unselected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/msgTV"
                android:layout_width="0dp"
                android:layout_height="250dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/aboutIV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/write_msg_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatEditText
                    style="@style/edtStyle"
                    android:id="@+id/msgEDT"
                    android:layout_width="0dp"
                    android:imeOptions="actionNext"
                    android:layout_marginTop="6dp"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:layout_marginStart="@dimen/margin_12"
                    app:layout_constraintStart_toEndOf="@+id/aboutIV"
                    android:gravity="start|top"
                    android:maxLines="15"
                    android:background="@null"
                    android:hint="@string/write_message"
                    android:inputType="textMultiLine"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                style="@style/btnStyle"
                android:id="@+id/submitBTN"
                android:text="@string/submit"
                android:layout_marginBottom="@dimen/margin_30"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/margin_30"
                app:layout_constraintTop_toBottomOf="@id/msgCL"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>