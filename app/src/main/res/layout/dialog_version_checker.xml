<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logoIV"
        android:layout_marginTop="@dimen/margin_30"
        android:src="@drawable/ic_version_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/versionTitleTV"
        android:textSize="@dimen/text_30"
        android:gravity="start"
        android:layout_marginStart="@dimen/margin_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_20"
        app:layout_constraintTop_toBottomOf="@+id/logoIV"
        android:text="@string/new_version_available"
        style="@style/tvStyle700"
      />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/msgTV"
        style="@style/tvStyle400"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="start"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:textColor="@color/color_414141"
        android:textSize="@dimen/text_15"
        android:text="@string/version_update_msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/versionTitleTV"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        style="@style/btnStyle"
        android:id="@+id/updateBTN"
        android:layout_marginBottom="@dimen/margin_30"
        app:layout_constraintBottom_toTopOf="@+id/skipTV"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:text="@string/update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/skipTV"
        style="@style/tvStyle500"
        android:textColor="@color/color_151515"
        android:layout_marginBottom="@dimen/margin_20"
        android:padding="@dimen/padding_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/text_14"
        android:text="@string/skip"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>