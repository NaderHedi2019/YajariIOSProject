<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/padding_20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/optionNameTV"
        tools:text="Object"
        android:paddingVertical="@dimen/padding_20"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/tvStyle600"
        android:textSize="@dimen/text_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/lineView"
        android:background="@color/color_C7C7C7"
        app:layout_constraintTop_toBottomOf="@+id/optionNameTV"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

